{
  "cli": {
    "appVersionSource": "remote",
    "version": ">= 5.0.0"
  },

  "build": {
    "base": {
      "node": "20.18.0",
      "autoIncrement": true,
      "env": {
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true",
        "AMPLIFY_CONFIG_DEV": "@amplify_config_dev",
        "AMPLIFY_CONFIG_PROD": "@amplify_config_prod"
      }
    },
    "development": {
      "extends": "base",
      "autoIncrement": true,
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "env": {
        "APP_ENV": "development"
      }
    },
    "development-simulator": {
      "extends": "development",
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "extends": "base",
      "autoIncrement": true,
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      },
      "env": {
        "APP_ENV": "preview"
      }
    },
    "production": {
      "extends": "base",
      "autoIncrement": true,
      "distribution": "store",
      "ios": {
        "resourceClass": "m-medium"
      },
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "APP_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "kkapple@devrim.tech",
        "ascAppId": "6757653064",
        "appleTeamId": "C9JFTXHDHM"
      },
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "track": "production"
      }
    }
  }
}
